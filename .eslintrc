{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "implicit-arrow-linebreak": [
      "off"
    ],
    "radix": 0,
    "no-console": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}